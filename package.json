{
  "name": "destiny-symbols",
  "version": "0.0.0",
  "description": "Destiny 2 symbols catalog",
  "author": "Plusb Preco <plusb21@gmail.com>",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext ts,tsx src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"**/*.md\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx}\" \"**/*.md\"",
    "typecheck": "tsc --noEmit --project src",
    "dev": "cross-env NODE_ENV=development next src",
    "build": "cross-env NODE_ENV=production npm-run-all build:prepare build:export",
    "build:prepare": "next build src",
    "build:export": "next export --outdir dist src",
    "clean": "rm -rf node_modules dist src/.next",
    "font": "ts-node internals/font-parse.ts",
    "font:copy": "cpy --parents resources/fonts-export src/public/font-meta"
  },
  "engines": {
    "node": ">=10"
  },
  "license": "MIT",
  "repository": "preco21/destiny-symbols",
  "bugs": {
    "url": "https://github.com/preco21/destiny-symbols/issues"
  },
  "homepage": "https://github.com/preco21/destiny-symbols#readme",
  "dependencies": {
    "@blueprintjs/core": "^3.22.3",
    "@blueprintjs/icons": "^3.13.0",
    "browser-update": "^3.3.8",
    "constate": "^1.3.2",
    "immer": "^5.1.0",
    "modern-normalize": "^0.6.0",
    "next-seo": "^3.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "reflexbox": "^4.0.6",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@preco21/next-fonts": "^1.0.1",
    "@preco21/tsconfig": "^3.0.0",
    "@types/fs-extra": "^8.0.1",
    "@types/node": "^13.1.4",
    "@types/opentype.js": "^0.7.2",
    "@types/prop-types": "^15.7.3",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/reflexbox": "^4.0.0",
    "@types/styled-components": "^4.4.1",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.14.0",
    "@zeit/next-css": "^1.0.1",
    "babel-plugin-styled-components": "^1.10.6",
    "cpy-cli": "^3.0.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^8.1.0",
    "next": "^9.1.7",
    "next-compose-plugins": "^2.2.0",
    "next-images": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "opentype.js": "^1.1.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true
    },
    "extends": [
      "standard",
      "standard-react",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/standard",
      "prettier/react"
    ],
    "rules": {
      "prefer-destructuring": "off",
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "sort-imports": [
        "error",
        {
          "ignoreDeclarationSort": true
        }
      ],
      "no-useless-constructor": "off",
      "lines-between-class-members": "off",
      "import/order": "error",
      "@typescript-eslint/no-useless-constructor": "error",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/class-name-casing": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/no-parameter-properties": "off",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "eslintIgnore": [
    "dist",
    "src/.next"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  }
}
